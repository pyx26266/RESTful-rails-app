<h1>Add User</h1>
<ul>
    <% @user.errors.full_messages.each do |m| %>
    <li><%= m %></li>
    <% end %>
</ul>
<%= form_for(@user) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.text_field :password %>

<%= f.label :confirm %>
<%= f.text_field :password_confirmation %>

<%= f.submit "Create my account" %>

<% end %>